#!/bin/bash

if [ "$PWD" != "$HOME/obsidian" ]; then
    echo "Error: This script must be run from ~/obsidian"
    echo "Current directory: $PWD"
    echo "Expected directory: $HOME/obsidian"
    exit 1
fi

timestamp=$(date '+%Y-%m-%d %H:%M:%S')

git add .
git commit -m "vault backup: $timestamp"
git push
